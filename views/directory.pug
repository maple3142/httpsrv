<!DOCTYPE html>
html
	head
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
	body
		.container
			.row
				.offset-md-3
				.col-md-6.col-xs-12
					h1 #{curpath}
					if upload
						form(method='post',action=curpath,enctype='multipart/form-data').row.mb-2
							.col-9
								.custom-file
									label(for='file').custom-file-label Select file
									input(name='file',type='file',id='file').form-control-file
							.col-3
								input(name='upload',type='submit',value='upload').btn.btn-primary
					.row
						.col-12
							ul.list-group
								if curpath!=='/'
									li.list-group-item
										a(href=path.join(curpath,'../')) ../
								each file in list.sort(f=>f.stat.isFile())
									li.list-group-item
										a(href=path.join(curpath,file.name),target=file.stat.isFile()?'_blank':'')
											span #{file.name}
											if file.stat.isDirectory()
												small &#128193;
												// &#128193; = 📁
		if instantclick
			script(src='https://cdnjs.cloudflare.com/ajax/libs/instantclick/3.0.1/instantclick.min.js',data-no-instant='')
			script(data-no-instant='').
				InstantClick.init()